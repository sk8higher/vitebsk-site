<%= render 'shared/header' %>

<p class="notice"><%= notice %></p>

<div class="container d-flex flex-column align-items-center">
  <h1><%= @monument.name %></h1>
  <%= image_tag @monument.photo, class: 'img-fluid img-thumbnail' %>
  <p class="mt-15"><%= @monument.description %></p>
  <div>
    <% if can? :manage, @monument %>
      <div class="container mt-10 mb-20">
        <div class="row">
          <div class="col text-center">
            <%= link_to "Отредактировать статью", edit_monument_path(@monument), class: 'btn btn-teal-200' %>
            <%= link_to "Удалить эту статью", @monument, data: { 'turbo-method': :delete, 'turbo-confirm': 'Вы уверены?' }, class: 'btn btn-danger' %>

            <%= link_to "Вернуться на список памятников", monuments_path, class: 'btn btn-teal' %>
          </div>
        </div>
      </div>
    <% else %>
      <div class="container mt-10 mb-20">
        <div class="row">
          <div class="col text-center">
            <%= link_to "Вернуться на список памятников", monuments_path, class: 'btn btn-teal' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

