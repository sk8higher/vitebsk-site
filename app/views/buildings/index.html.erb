<%= render 'shared/header' %>

<p style="color: green"><%= notice %></p>

<h1 class="text-center mb-10">Здания</h1>

<div id="buildings" class="row row-cols-1 row-cols-md-2 g-4">
  <% @buildings.each do |building| %>
    <div class="col">
      <div class="card">
        <%= image_tag building.photo, class: 'card-img-top' %>
        <div class="card-body">
          <h5 class="card-title"><%= building.name %></h5>
          <p class="card-text"><%= building.description %></p>
          <a href="#" class="btn btn-primary">Посмотреть</a>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= link_to "Новая статья о здании", new_building_path %>
