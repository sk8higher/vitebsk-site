<%= render 'shared/header' %>

<p class="notice"><%= notice %></p>

<h1 class="text-center m-0"><%= @person.name %>: работы</h1>

<% if can? :manage, @artworks %>
  <div class="container mt-15 mb-20">
    <div class="row">
      <div class="col text-center">
        <%= link_to "Добавить работу", new_person_artwork_path, class: 'btn btn-blue' %>
      </div>
    </div>
  </div>
<% end %>

<div class="container mt-15 mb-20">
  <div class="row">
    <div class="col text-center">
      <%= link_to "На главную", root_path, class: 'btn btn-blue' %>
      <%= link_to "Назад", person_path(@person), class: 'btn btn-outline-dark' %>
    </div>
  </div>
</div>

<div id="artworks" class="row row-cols-1 row-cols-md-2 row-cols-xl-4 g-4 mx-20 mt-0">
  <% @artworks.each do |artwork| %>
    <div class="col">
      <div class="card">
        <% unless artwork.photo.blank? %>
          <%= image_tag artwork.photo, class: 'card-img-top' %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= artwork.title %></h5>
          <p class="card-text"><%= truncate strip_tags(artwork.description), length: 100 %></p>
          <%= link_to 'Посмотреть', person_artwork_path(@person, artwork), class: 'btn btn-light-blue' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class="container d-flex justify-content-center mt-30">
  <%== render partial: 'pagy/bootstrap_nav', locals: {pagy: @pagy} %>
</div>

