<%= render 'shared/header' %>

<p class="notice"><%= notice %></p>

<div class="container d-flex flex-column align-items-center">
  <h1><%= @person.name %></h1>
  <%= image_tag @person.photo, class: 'img-fluid img-thumbnail', height: 200 %>
  <p class="mt-15"><%= @person.bio %></p>
  <div>
    <% if can? :manage, @person %>
      <div class="container mt-10 mb-20">
        <div class="row">
          <div class="col text-center">
            <%= link_to "Отредактировать статью", edit_person_path(@person), class: 'btn btn-teal-200' %>
            <%= link_to "Удалить эту статью", @person, data: { 'turbo-method': :delete, 'turbo-confirm': 'Вы уверены?' }, class: 'btn btn-danger' %>

            <%= link_to "Вернуться на список известных людей", people_path, class: 'btn btn-teal' %>
            <%= link_to 'Показать работы', person_artworks_path(@person), class: 'btn btn-info' %>
            <%= link_to 'Добавить работу', new_person_artwork_path(@person), class: 'btn btn-info'  %>
          </div>
        </div>
      </div>
    <% else %>
      <div class="container mt-10 mb-20">
        <div class="row">
          <div class="col text-center">
            <%= link_to "Вернуться на список известных людей", people_path, class: 'btn btn-teal' %>
            <%= link_to 'Показать работы', person_artworks_path(@person), class: 'btn btn-outline-dark' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

